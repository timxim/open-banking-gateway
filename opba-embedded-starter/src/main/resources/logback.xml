<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>
    <!-- please do not remove but replace log level, thx peter -->
    <logger name="de.adorsys.opba.protocol.api.dto.result.body.FacadeToProtocolMapper" level="debug"/>
    <logger name="de.adorsys.opba.protocol.xs2a.service.ContextUtil" level="debug"/>
    <logger name="de.adorsys.opba.protocol.xs2a.entrypoint.XS2aToFacadeMapper" level="debug"/>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
